{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":timezone(Asia/Tokyo)"],

	// サプライチェーン攻撃対策
	"minimumReleaseAge": "14 days",

	"labels": ["renovate"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"automerge": true,
	"packageRules": [
		{
			"matchUpdateTypes": ["major"],
			"automerge": false
		}
	]
}
